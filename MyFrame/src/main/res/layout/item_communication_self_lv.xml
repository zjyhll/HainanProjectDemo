<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/content_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/icon_self"
        android:background="@drawable/chatto_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="hahah" />

    <com.bm.library.PhotoView
        android:id="@+id/iv_self"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp" />
    <LinearLayout
        android:id="@+id/ll_sound_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_recorder_time_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:layout_marginRight="3dp"
            android:textColor="#ff777777" />

        <FrameLayout
            android:id="@+id/id_recorder_lenght_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/chatto_bg" >

            <View
                android:id="@+id/id_recorder_anim_self"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal|right"
                android:background="@mipmap/adj" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>